{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Bundler", // Recommended in TS 5.0+ for applications that use a bundler
        "target": "ES2023",
        "strict": true,
        "esModuleInterop": true, // Add this line for Jest compatibility
        "skipLibCheck": true, // Optional: speeds up compilation
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ]
}
