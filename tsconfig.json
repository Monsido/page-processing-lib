{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true, // Add this line for Jest compatibility
        "skipLibCheck": true // Optional: speeds up compilation
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.spec.ts" // Include your test files
    ]
}