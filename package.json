{
    "name": "page-processing-lib",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": "git@github.com:Monsido/page-processing-lib.git",
    "author": "Monsido frontend team",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "node build/build.mjs && yarn copy:info",
        "copy:info": "cp src/info.json dist/info.json",
        "serve": "node build/serve.mjs",
        "lint": "eslint src --ext .ts",
        "test": "jest",
        "test:u": "jest --config=jest.unit.config.js",
        "test:i": "jest --config=jest.integration.config.js",
        "version": "yarn version"
    },
    "files": [
        "dist/**/*"
    ],
    "exports": {
        ".": {
            "require": "./dist/index.csj.js",
            "import": "./dist/index.js"
        }
    },
    "devDependencies": {
        "@monsido/eslint-config-typescript": "git+ssh://git@github.com:Monsido/eslint-config-typescript.git#1.0.9",
        "@types/jest": "29.5.13",
        "@types/jest-image-snapshot": "^6.4.0",
        "@types/jsdom": "21.1.7",
        "@types/node": "22.5.4",
        "@typescript-eslint/eslint-plugin": "6.21.0",
        "@typescript-eslint/parser": "6.21.0",
        "esbuild": "0.21.5",
        "eslint": "8.57.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "jest-image-snapshot": "^6.4.0",
        "puppeteer": "22.15.0",
        "ts-jest": "29.2.5",
        "typescript": "5.6.2"
    },
    "jest": {
        "projects": [
            "<rootDir>/jest.unit.config.js",
            "<rootDir>/jest.integration.config.js"
        ]
    }
}
